---
export interface Props {
  title?: string;
  subtitle?: string;
  icon?: string;
  href?: string;
  variant?: 'default' | 'featured' | 'service' | 'highlight' | 'gallery';
  hoverEffect?: 'lift' | 'scale' | 'slide' | 'none';
  borderAccent?: 'left' | 'top' | 'bottom' | 'none';
  accentColor?: 'primary' | 'secondary' | 'accent' | 'success';
  padding?: 'small' | 'medium' | 'large';
  className?: string;
}

const {
  title,
  subtitle,
  icon,
  href,
  variant = 'default',
  hoverEffect = 'lift',
  borderAccent = 'none',
  accentColor = 'primary',
  padding = 'medium',
  className = '',
} = Astro.props;

const CardTag = href ? 'a' : 'div';
const cardClasses = [
  'card',
  `card-${variant}`,
  `hover-${hoverEffect}`,
  borderAccent !== 'none' ? `border-${borderAccent}` : '',
  `accent-${accentColor}`,
  `padding-${padding}`,
  className
].filter(Boolean).join(' ');
---

<CardTag class={cardClasses} href={href}>
  {icon && <div class="card-icon">{icon}</div>}
  
  <div class="card-content">
    {title && <h3 class="card-title">{title}</h3>}
    {subtitle && <p class="card-subtitle">{subtitle}</p>}
    
    <div class="card-body">
      <slot />
    </div>
  </div>
  
  {href && (
    <div class="card-link-indicator">
      <span class="sr-only">Read more</span>
      â†’
    </div>
  )}
</CardTag>

<style>
  /* Card Base Styles - Mobile First */
  .card {
    background: var(--bg-primary);
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    position: relative;
    text-decoration: none;
    color: inherit;
  }

  .card:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Card Content */
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .card-title {
    font-size: 1.125rem; /* Mobile: 18px */
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
    line-height: 1.3;
  }

  .card-subtitle {
    font-size: 0.95rem; /* Mobile: 15px */
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .card-body {
    flex: 1;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .card-link-indicator {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 1.25rem;
    color: var(--color-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  /* Padding Variations */
  .padding-small {
    padding: 1rem;
  }

  .padding-medium {
    padding: 1.5rem;
  }

  .padding-large {
    padding: 2rem;
  }

  /* Card Variants */
  .card-featured {
    border: 2px solid var(--color-accent);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .card-service {
    text-align: center;
  }

  .card-service .card-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .card-highlight {
    text-align: center;
    background: var(--bg-secondary);
  }

  .card-gallery {
    aspect-ratio: 4/3;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
    justify-content: center;
    align-items: center;
  }

  .card-gallery .card-icon {
    font-size: 4rem;
    opacity: 0.8;
  }

  /* Border Accents */
  .border-left {
    border-left: 4px solid var(--accent-color);
  }

  .border-top {
    border-top: 4px solid var(--accent-color);
  }

  .border-bottom {
    border-bottom: 4px solid var(--accent-color);
  }

  /* Accent Colors */
  .accent-primary {
    --accent-color: var(--color-primary);
  }

  .accent-secondary {
    --accent-color: var(--color-secondary);
  }

  .accent-accent {
    --accent-color: var(--color-accent);
  }

  .accent-success {
    --accent-color: var(--color-success);
  }

  /* Hover Effects */
  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .hover-scale:hover {
    transform: scale(1.02);
  }

  .hover-slide:hover {
    transform: translateX(5px);
  }

  .card[href]:hover .card-link-indicator {
    opacity: 1;
  }

  /* Tablet styles */
  @media (min-width: 768px) {
    .card-icon {
      font-size: 3rem;
    }

    .card-service .card-icon {
      font-size: 4rem;
    }

    .card-title {
      font-size: 1.25rem; /* Tablet: 20px */
    }

    .card-subtitle {
      font-size: 1rem; /* Tablet: 16px */
    }

    .padding-small {
      padding: 1.5rem;
    }

    .padding-medium {
      padding: 2rem;
    }

    .padding-large {
      padding: 2.5rem;
    }
  }

  /* Desktop styles */
  @media (min-width: 1024px) {
    .card-title {
      font-size: 1.375rem; /* Desktop: 22px */
    }

    .card-subtitle {
      font-size: 1.125rem; /* Desktop: 18px */
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .card,
    .card-link-indicator {
      transition: none;
    }

    .hover-lift:hover,
    .hover-scale:hover,
    .hover-slide:hover {
      transform: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .card {
      border: 2px solid var(--color-primary);
    }

    .card-featured {
      border-width: 3px;
    }
  }
</style>