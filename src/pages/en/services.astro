---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('en');
---

<Layout 
  title={t('services.title')}
  description={t('meta.services.description')}
>
  <!-- Hero Section -->
